<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCustomGrey"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCustomGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/aboutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings:"
                android:textColor="@color/colorCustomGreen"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/alt1IdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Altitude 1:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/alt1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Altitude"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Altitude"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/dif1IdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Diffrence 1:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/diff1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Difference"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Difference"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen" />
            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/alt2IdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Altitude 2:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/alt2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Altitude"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Altitude"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/dif2IdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Diffrence 2:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/diff2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Difference"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Difference"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen" />
            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/alt3IdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Altitude 3:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/alt3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Altitude"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Altitude"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/dif3IdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Diffrence 3:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/diff3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Difference"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Difference"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen" />
            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/logSizeIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="37"
                    android:text="Log Size:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/logSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:contentDescription="Byte"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Byte"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/minGPSUpdateIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="37"
                    android:text="GPS Update [m]:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/minGPSUpdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:contentDescription="Minutes"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Minutes"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/picTimeIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="37"
                    android:text="Picture Time [s]:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/picTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:contentDescription="Sec"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Sec"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/vidTimeIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="37"
                    android:text="Video Time [s]:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/vidTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:contentDescription="Sec"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Sec"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/minCaptureVidIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="37"
                    android:text="Video Every [m]:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/minCaptureVid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:contentDescription="Minutes"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Minutes"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/batLevelIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="37"
                    android:text="Low Power Mode:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/batLevel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:contentDescription="Percentage"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Percentage"
                    android:inputType="number"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/showToastCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Toast Messaging"
                    android:textColor="@color/colorCustomGreen"
                    android:checked="true"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ipAddrCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send via LoRa"
                    android:checked="true"
                    android:textColor="@color/colorCustomGreen" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/ipAddrTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="37"
                    android:text="LoRa IP Addr:"
                    android:textColor="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/ipAddr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:contentDescription="IP Address"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="IP Address"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789."
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/geigerSnsCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geiger Sensor"
                    android:checked="true"
                    android:textColor="@color/colorCustomGreen" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>