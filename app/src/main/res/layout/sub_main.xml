<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sub_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCustomGrey"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ariel.balloonspy.activity.MainActivity"
    tools:showIn="@layout/main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCustomGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/aboutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project Balloon v1.2.0"
                android:textColor="@color/colorCustomGreen"
                android:textColorHint="@color/colorCustomGreen"
                android:textColorLink="@color/colorCustomGreen"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/latIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Latidute:"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/LAT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Latidute"
                    android:ems="10"
                    android:hint="--"
                    android:inputType="text"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/LonIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Longtidute:"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/LON"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Longtidute"
                    android:ems="10"
                    android:hint="--"
                    android:inputType="text"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/AltIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Alttidute:"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/ALT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Alttidute"
                    android:ems="10"
                    android:hint="--"
                    android:inputType="text"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/SpdIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Spead:"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/SPD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Spead"
                    android:ems="10"
                    android:hint="--"
                    android:inputType="text"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/HeadIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Heading:"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/HED"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Heading"
                    android:ems="10"
                    android:hint="--"
                    android:inputType="text"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/display_gps_status_enabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GPS enabled/disabled?"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />

                <TextView
                    android:id="@+id/display_gps_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GPS status (nothing)"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />

                <TextView
                    android:id="@+id/display_gps_accuracy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="accuracy ..."
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />

                <TextView
                    android:id="@+id/display_gps_updated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="last updated ..."
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />

                <TextView
                    android:id="@+id/display_gps_extra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <View style="@style/Divider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/GeigerIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Temp.:"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/GEIG"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription=""
                    android:ems="10"
                    android:hint="--"
                    android:inputType="text"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/BattIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Battery:"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/BAT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Battery"
                    android:ems="10"
                    android:hint="--"
                    android:inputType="text"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/PreIdTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="27"
                    android:text="Pressure:"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/PRES"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:contentDescription="Pressure"
                    android:ems="10"
                    android:hint="--"
                    android:inputType="text"
                    android:textColor="@color/colorCustomGreen"
                    android:textColorHint="@color/colorCustomGreen"
                    android:textColorLink="@color/colorCustomGreen" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/main_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Video"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/main_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Picture"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/main_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Settings"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>